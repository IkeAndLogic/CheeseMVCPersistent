@using CheeseMVC.Models
@model List<CheeseCategory>

<h1>Cheese Category </h1>
@if (Model.Count == 0)
{
    <p> No Categories yet! </p>

}
<ul>
    @foreach (var typeCheese in Model)
    {
        <li> @typeCheese.Name </li>
    }
</ul>

<p> <a asp-controller="Category" asp-action="Add"> Add Category</a></p>